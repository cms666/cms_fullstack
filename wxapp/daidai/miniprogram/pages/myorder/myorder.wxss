/* pages/order/order.wxss */
page{
  margin: 0px;
  padding: 0;
  background-color: #f2f2f2;
}
.container{
  width: 100%;
}
.container .item{
  margin: 20rpx auto 0;
  width: 90%;
  padding: 16rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 0rpx 7rpx 20rpx #ececec;
  transition: all .5s;
}
.desc{
  overflow:hidden;
  white-space:nowrap;
  text-overflow:ellipsis;
  font-size: 26rpx;
}
.tips,.header{
  font-size: 28rpx;
  justify-content: space-between;
}
.price,.tip{
  color: red;
}
.header,.tips{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
text{
  padding: 5rpx 0;
}