/* miniprogram/pages/index/index.wxss */
page{
  padding: 0;
  margin: 0;
  background-color: #f2f2f2;
}
.container{
  width: 100%;
  
}
.container .item{
  margin: 20rpx auto 0;
  height: 160rpx;
  width: 90%;
  padding: 0 10rpx;
  background-color: #fff;
  border-radius: 20rpx;
  font-size: 40rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0px 7rpx 20rpx #ececec;
  transition: all .5s;
  
}