/* miniprogram/pages/index/index.wxss */
page{
  padding: 0;
  margin: 0;
}
#app{
  width: 100%;
  display: flex;
  justify-content: center;
}
.container{
  width: 95%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding-top: 20rpx;
}
.container .item{
  margin: 10rpx auto;
  height: 300rpx;
  width: 40%;
  padding: 0 20rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 7rpx 7rpx 20rpx #ececec;
  transition: all .5s;
}

.item-hover{
  background-color: #ececec;
}