<!--pages/bookCity/bookCity.wxml-->
<view class="header">
  <view class="hot">热榜推荐</view>
  <view class="more">点击搜索更多</view>
</view>
<view class="hotlist" wx:for="{{hotData}}" wx:key="index">
  <view class="itemleft">
    <image src="{{item.imgurl}}"/>
  </view>
  <view class="itemright">
    <view class="authotop">
      <text class="bookname">{{item.name}}</text>
      <text class="autho">{{item.author}}</text>
    </view>
    <view class="detail">{{item.detail}}</view>
  </view>
</view>
