*
  margin 0
  padding 0
ul li
  list-style none
#toast
  display none
.movie
  width 100%
  &-head
    width 100%
    height 40px
    line-height 40px
    background-color #1e2025
    color #ffffff
    padding 0 10px
    box-sizing border-box
    display flex
    .iconfont
      width 16px
    .title
      flex 1
      text-align center
  &-info
    padding 15px
    background-color #1e2025
    &__desc
      display flex
      width 100%
      .info-pic
        width 122px
        height 165px
        overflow hidden
        img
          width 100%
      .info-container
        flex 1
        color #9b9da2
        font-size 12px
        margin 10px
        .name
          color #ffffff
          font-size: 24px
          font-family Arial,sans-serif
          font-weight normal
        .type
          span 
            width 40px
            height 14px
            display inline-block
            background url('https://s0.meituan.net/bs/myfe/canary/file/asgard/images/movie/movie-tag-2DIMAX.png')
            background-size cover
            vertical-align middle
        .btn-wrap
          display flex
          margin-top 10px
          .flex
            flex 1
            text-align center
            color #fff
            background-color #58585b
            border-radius 4px
            height 32px
            line-height 32px
            &:nth-child(1)   //或者first-child
              margin-right 10px
            .iconfont
              font-size 14px
              margin-right 5px 
    &__rate
      background-color #black
      margin-top 15px
      padding 10px
      border-radius: 4px
      .icon-maoyan
        color red
      .rate-title
        display flex
        justify-content space-between
        &__left
          color #ffffff
        &__right
          color #68686b
      .rate-detail
        display flex
        &__left
          flex 454
          display flex
          .grade
            margin-left 23px
            text-align center
            h2
              color #fcc300
            p
              color #68686b
          .star
            // margin-right 23px
            text-align right
            display flex
            align-items center 
            .list
              display flex
              margin 2px 0 2px
              .star-num
                font-size 0
                width 40px
                img
                  width 8px
                  height 8px
              .percent
                width 78px
                height 4px
                background #252528
                position relative
                .percent-val
                  position absolute
                  left 2px
                  top 3px
                  height 100%
                  background #fcc300
                  width 80%
        &__right
          flex 266
          display flex
          align-items center
          justify-content center
          img
            height 46px
  &-desc
    padding 15px
    .content
      transition all 1s ease
      
    .line-clamp
      display -webkit-box
      -webkit-box-orient vertical
      -webkit-line-clamp 3
      word-wrap break-word
      word-break break-all
      overflow hidden
    .arrow
      text-align center
      font-size 16px
      transition all 1s ease
      .iconfont
        display block
        transform rotateZ(0deg)
        transition all 1s ease
        
    .arrow .up
      transform rotateZ(180deg)
      display block
  &-actor
    margin 15px
    &__title
      font-size 16px
    &__list
      margin-top 10px
      ul
        display flex
        overflow-x scroll
        li
          margin-right 10px
          a
            display: flex;
            flex-flow: column;
            justify-content: center;
            align-items: center;
            .name
              color #000
              font-size 14px
              margin-top 5px
            .role
              color #9b9da2
              font-size 14px


        

    
            
        
          
          